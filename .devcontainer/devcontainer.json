{
    "name": ".NET in Codespaces",
    "image": "mcr.microsoft.com/dotnet/sdk:10.0",
    // "build": {
    //     "dockerfile": "Dockerfile"
    // },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/github-cli:1": {
            "version": "2"
        },
        "ghcr.io/devcontainers/features/powershell:1": {
            "version": "latest"
        },
        "ghcr.io/azure/azure-dev/azd:0": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/common-utils:2": {},
        "ghcr.io/devcontainers/features/dotnet:2": {
            "version": "none",
            "dotnetRuntimeVersions": "10.0",
            "aspNetCoreRuntimeVersions": "10.0"
        },
        "ghcr.io/stuartleeks/dev-container-features/dev-tunnels:0": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.vscode-node-azure-pack",
                "GitHub.copilot",
                "GitHub.vscode-github-actions",
                "ms-dotnettools.csdevkit"
            ]
        }
    },
    "postCreateCommand": "dotnet tool install -g Aspire.Cli && dotnet dev-certs https && dotnet build fukuten-aichatweb.slnx",
    "hostRequirements": {
        "memory": "8gb",
        "cpus": 4
    },
    "remoteEnv": {
        "DOTNET_MULTILEVEL_LOOKUP": "0",
        "TARGET": "net10.0"
    }
}